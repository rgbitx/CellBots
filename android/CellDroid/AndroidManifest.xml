<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.cellbots.celldroid"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".CellDroidActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:enabled="true"
            android:name="com.cellbots.celldroid.CellDroidService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.USE_CELLDROID_SERVICE" />
                <category android:name="android.intent.category.CELLDROID_SERVICE" />
            </intent-filter>
        </service>
    
        <activity android:name=".PrefsActivity" android:label="@string/app_name">
        </activity>
    </application>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest> 